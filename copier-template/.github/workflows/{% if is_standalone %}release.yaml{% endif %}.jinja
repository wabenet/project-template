---
name: Release

on:
  push:
    tags:
      - 'v*'

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: wabenet/project-template/actions/build@{{ _commit }}
        with:
          go-version: "{{ go_version }}"
          release: true
          github-token: ${{ '{{' }} secrets.GITHUB_TOKEN {{ '}}' }}
